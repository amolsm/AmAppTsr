@model IEnumerable<Tsr.Core.Models.BatchListVM>

@{
    ViewBag.Title = "Batch List";
}

<!-- START BREADCRUMB -->
<ul class="breadcrumb push-down-0">
    <li><a href="#">Home</a></li>
    <li><a href="#">Course</a></li>
    <li><a href="#">Batch</a></li>
    @*<li class="active">Error 404</li>*@
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div>
        <div class="row">
            <div class="col-md-12">

                <form class="form-horizontal">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Batch List</h3>

                        </div>

                        <div class="panel-body">
                            <div class="row" style="padding-bottom:10px">
                                @*<button class="btn btn-info btn-rounded" data-toggle="modal" data-target="#modal_basic" ng-click="modules = null">Add New</button>*@
                                @Html.ActionLink("New Batch", "BatchCreate", "MasterDetails", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-info btn-rounded" })
                            </div>

                            <div class="form-group">

                                <div class="col-md-3">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.DropDownList("CategoryId",
                                                (IEnumerable<SelectListItem>)ViewBag.Category, "Select Category", new { @class = "form-control", @onchange = "FillCourse()" })
                                    </div>

                                </div>

                                <div class="col-md-3">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.DropDownList("CourseId",
                   new SelectList(Enumerable.Empty<SelectListItem>(), "CourseId", "CourseName"),
              " ", new { @class = "form-control"})
                                    </div>

                                </div>

                              

                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input class="btn btn-primary" type="button" value="Search" onclick="Search()" />
                                    </div>

                                </div>
                            </div>
                            <div id="dvResult">
                                @{Html.RenderPartial("BatchListGet", Model);}

                            </div>
                            

                        </div>
                    </div>
                </form>

            </div>
        </div>


    </div>


</div>
<!-- END PAGE CONTENT WRAPPER -->
<!-- MODALS -->
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/js/plugins/bootstrap/bootstrap-select.js"></script>
<script src="~/Scripts/ModalForm.js"></script>
<script>
    function FillCourse() {
        var CategoryId = $('#CategoryId').val();
        $.ajax({
            url: '/MasterDetails/FillCourse',
            type: "GET",
            dataType: "JSON",
            data: { CategoryId: CategoryId },
            success: function (Courses) {
                $("#CourseId").html(""); // clear before appending new list
                $("#CourseId").append(
                        $('<option></option>').val("").html("Select Course"));
                $.each(Courses, function (i, c) {
                    $("#CourseId").append(
                        $('<option></option>').val(c.CourseId).html(c.CourseName));
                });
            }
        });
    }

    function Search() {
        var CourseId = $('#CourseId').val();

        $("#dvResult").load('@(Url.Action("BatchListGet", "MasterDetails",null, Request.Url.Scheme))?CourseId=' + CourseId);
        //$('#customers2').DataTable();
    }
</script>


