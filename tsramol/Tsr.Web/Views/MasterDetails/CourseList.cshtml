@model IEnumerable<Tsr.Core.Models.MasterCourseListVM>

@{
    ViewBag.Title = "Course List";
}

<!-- START BREADCRUMB -->
<ul class="breadcrumb push-down-0">
    <li><a href="#">Home</a></li>
    <li><a href="#">Masters</a></li>
    <li><a href="#">Course</a></li>
    @*<li class="active">Error 404</li>*@
</ul>
<!-- END BREADCRUMB -->

<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div>
        <div class="row">
            <div class="col-md-12">

                <form class="form-horizontal">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Course List</h3>

                        </div>

                        <div class="panel-body">
                            <div class="row" style="padding-bottom:10px">
                                @*<button class="btn btn-info btn-rounded" data-toggle="modal" data-target="#modal_basic" ng-click="modules = null">Add New</button>*@
                                @Html.ActionLink("New Course ", "CourseCreate", "MasterDetails", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-info btn-rounded" })
                            </div>
                            <table id="customers2" class="table datatable">
                                <thead>
                                    <tr>
                                        <th>Course Name</th>
                                        <th>Category</th>
                                        <th>Duration</th>
                                        <th>Total Seats</th>
                                        @*<th>Coordinator</th>*@
                                        @*<th>Application Fee</th>*@
                                        @*<th>Min Balance</th>*@
                                        <th>Is Active</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CourseName)
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                            
                                            <td>
                                               @Html.DisplayFor(modelItem => item.Duration)
                                            </td>
                                            <td>@Html.DisplayFor(modelItem=>item.TotalSeat)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.Coordinator)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ApplicationFee)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MinBalance)</td>*@

                                            <td>
                                                @if (item.IsActive == true)
                                                {  <text> Yes</text>}
                                                else
                                                { <text> No</text> }
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "CourseEdit", new { id = item.CourseId }, new { data_modal = "" }) |
                                                @*@Html.ActionLink("Details", "CourseEdit", new { id = item.CourseId }, new { data_modal = "" }) |*@
                                                @Html.ActionLink("Documents", "CourseDocuments", new { id = item.CourseId }, new { data_modal = "" }) |
                                                @if (item.IsActive == true)
                                                {  @Html.ActionLink("Deactivate", "CourseDeactive", new { id = item.CourseId, flag = "D" }, new { onclick = "return confirm('Are you sure you wish to make Deactive?');" })}
                                                else
                                                {  @Html.ActionLink("Activate", "CourseDeactive", new { id = item.CourseId, flag = "A" }, new { onclick = "return confirm('Are you sure you wish to make Active?');" })}

                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>
                </form>

            </div>
        </div>


    </div>


</div>
<!-- END PAGE CONTENT WRAPPER -->
<!-- MODALS -->
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/js/plugins/bootstrap/bootstrap-select.js"></script>
<script src="~/Scripts/ModalForm.js"></script>


