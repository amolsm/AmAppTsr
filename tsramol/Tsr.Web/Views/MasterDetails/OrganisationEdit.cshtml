<script type="text/javascript">
    $(document).ready(function () {
        $('#Name').blur(function () {
            var Name = $('#Name').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("IsOrganisationNameExists")',
                dataType: 'JSON',
                data: { Name: Name },
                success: function (data) {
                    if (data.Name != null) {
                        alert("Organisation Name Already Exist")
                        $('#Name').val('');
                        $('#Name').focus();
                        return false;
                    }
                }
            });
        });
    })
</script>