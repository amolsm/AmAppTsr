<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div>
        <div class="row">
            <div class="col-md-12">

                <div class="form-horizontal">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Upload Certificate Number</h3>

                        </div>
                        @using (Html.BeginForm("UploadExcel", "Certification", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
                        {
                            <div class="panel-body">
                                <div class="row">

                                    <div class="col-md-12">

                                        <div class="form-group">

                                            <div class="col-md-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.DropDownList("CategoryId",
             (IEnumerable<SelectListItem>)ViewBag.Categories, "Select Category", new { @class = "form-control", @onchange = "FillCourse()" })
                                                </div>

                                            </div>

                                            <div class="col-md-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.DropDownList("CourseId",
             (IEnumerable<SelectListItem>)ViewBag.Course, "Select Course", new { @class = "form-control", @onchange = "FillBatch()" })
                                                </div>

                                            </div>



                                            <div class="col-md-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.DropDownList("BatchId",
    new SelectList(Enumerable.Empty<SelectListItem>(), "BatchId", "Name"),
    " ", new { @class = "form-control" })
                                                </div>

                                            </div>



                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">Step 1 : Download Excel Format</div>
                                        <div class="col-md-3">
                                            <div class="input-group">

                                                <input class="btn btn-primary" type="button" value="Download" onclick="location.href='@Url.Action("DownloadExcelForCompanyReserv", "Certification")?id=' + document.getElementById('BatchId').value" />

                                            </div>

                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">Step 2 : Copy All Data In New Excel File</div>


                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3"> Step 3 : Upload New Excel File </div>
                                        <div class="col-md-3">
                                            @*@Html.TextBox("FileUpload", new { type = "file", @class = "form-control" })*@
                                            <input type="file" id="FileUpload" name="FileUpload" class="form-control" />

                                        </div>
                                        <div class="col-md-3">
                                            <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" />
                                        </div>
                                    </div>

                                </div>


                            </div>
                        }
                        @*<div id="dvResult">
                                @{Html.RenderPartial("ConfirmAdmissionsList", Model);}

                            </div>*@
                    </div>
                </div>
            </div>

        </div>
    </div>


</div>


</div>
