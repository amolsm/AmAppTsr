@model Tsr.Core.Models.CertificationCertificateVM
@using Tsr.Web.Common
<style>
    html, tbody {
        font-family: Arial;
    }
  
    input {
        border: 0;
        border-bottom: solid 1px #000;
        outline: none;
        width: 100%;
    }
</style>
@foreach (var c in Model._CertificateList)
{

    <table style="width:100%; height:100%; padding:20px;border-collapse:separate;border-style: solid;border-width: 26px;-moz-border-image: url('../Img/border.png') 26 round;-webkit-border-image: url('../Img/border.png') 26 round;-o-border-image: url('../Img/border.png') 26 round;border-image: url('../Img/border.png') 26 fill round;page-break-inside:avoid" cellspacing="0">

        <thead>
            <tr>
                <td colspan="15">

                    <div style="text-align:center">
                        <span style="font-family:'Times New Roman';font-size:20px; font-weight:bold">SIR  MOHAMED  YUSUF  SEAMEN  WELFARE  FOUNDATION</span>

                        <div style="width:100%;">
                            <div style="width:85%;float:right">
                                Nhava,Panvel Taluka Dist. Raigad-410206,Maharashtra<br />

                                Tel : 022-27212800/900 Fax: 0222272112495<br />
                                Email ID: tsrahman@tsrahaman.org<br />
                                www.tsrahaman.org<br />
                                INDOS No.009<br />
                                <span style="font-family:'Old English Text MT';font-size:40px; font-weight:bold">Training Ship Rahaman</span>
                            </div>
                            <div style="width:150px;height:160px;text-align:left;margin-right:15%">
                                <img src="~/Img/LOGO.jpg" style="width:140px;height:150px;position:absolute" />
                            </div>


                        </div>
                    </div>
                </td>

            </tr>
        </thead>
        <tbody>

            <tr><td colspan="15" style="text-align:right;font-weight:bold;font-family:Calibri;font-size:large">Certificate No. 0610510012016</td></tr>
            <tr>
                <td style="text-align:center" colspan="15"><span style="font-family:Calibri;font-size:30px; font-weight:bold;font-style:italic">@(c.CourseName == null ? "" : c.CourseName)</span></td>
            </tr>
            <tr>
                <td colspan="15">THIS IS TO CERTIFY THAT</td>
            </tr>
            <tr style="border-bottom:1px solid black">
                <td colspan="15">
                    <input type="text" style="font-family:'Times New Roman';font-size:15px; font-weight:bold" value="@(c.ApplicantName == null ? "" : c.ApplicantName)" />
                </td>

            </tr>
            <tr>
                <td colspan="2">
                    RollNo
                </td>
                <td colspan="2">
                   <input type="text" style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="" /> 
                </td>
                <td colspan="6">
                    Date of Birth
                </td>
                <td colspan="5">
                    <input type="text" style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100%" value="@(c.DateofBirth == null ? "" : @Convert.ToDateTime(c.DateofBirth).ToString("dd-MM-yyyy"))" /> 
                </td>
            </tr>
            <tr>
                <td colspan="7">
                    Indian National Database(*INDoS No.)
                </td>
                <td colspan="4">
                    <input type="text" style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.Indosno == null ? "" : c.Indosno)" />
                </td>
                <td colspan="4">
                    has successfully
                </td>


            </tr>
            <tr>
                <td colspan="15">
                    completed a Pre Sea Training Course for Rating forming part of the Navigational and 
                    </td>
                </tr>
            <tr>
                <td colspan="15">
                    Engineering watch from <input type="text" style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px"/> to <input type="text" style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px"/>
                </td>
            </tr>
         


            <tr>
                <td colspan="15">@(c.LineOfCertificate == null ? "" : c.LineOfCertificate)</td>
            </tr>



            <tr>
                <td colspan="15"><p>@(c.Paragraph1 == null ? "" : c.Paragraph1)</p></td>
            </tr>
            
            <tr>
                <td colspan="15"><p>@(c.Paragraph2 == null ? "" : c.Paragraph2)</p></td>
            </tr>
            <tr>
                <td colspan="15"><p>@(c.Paragraph3 == null ? "" : c.Paragraph3)</p></td>
            </tr>
            <tr>
                <td colspan="15">
                    <div style="width:125px;height:135px;border:1px solid #000; display: flex;align-items: center;justify-content: center;"><p style="text-align:center;vertical-align:middle">Photograph</p></div>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="text-align:center">
                    <br />
                    <b>Rating's Signature</b>
                 </td>
                <td colspan="4" style="text-align:center">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> @(c.DateOfIssue == null ? "" : Convert.ToDateTime(c.DateOfIssue).ToString("dd-MM-yyyy"))</span>
                    <br />
                    <b>Date of Issue</b>
                </td>
                <td colspan="8" style="text-align:center">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> @(c.PrincipalName == null ? "" :c.PrincipalName)</span>
                    <br />
                    <b>PRINCIPAL</b>
                </td>
            </tr>
            <tr>
               

                <td align="right" colspan="15">

                   
                    <img src="~/Img/DNV LOGO.jpg" style="width:50px;height:80px;" />

                </td>



            </tr>
            <tr>
                <td colspan="15">
              <span style="font-family:Calibri;font-weight:normal;font-size:xx-small">* Indian National Database of Seafarers</span>
                </td>
                </tr>
            <tr>
                <td colspan="15">
                    <span style="font-family:Calibri;font-weight:normal;font-size:xx-small">All enquiries concerning the certificate should be addressed to the issuing authority above.</span>
</td>
            </tr>
</tbody>


    </table>
}


