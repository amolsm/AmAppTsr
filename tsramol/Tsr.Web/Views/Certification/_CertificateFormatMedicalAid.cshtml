@model Tsr.Core.Models.CertificationCertificateVM
@using Tsr.Web.Common
<style>
    html, tbody {
        font-family: Arial;
    }

    input {
        border: 0;
        border-bottom: solid 1px #000;
        outline: none;
        width:100%;
    }
</style>
@foreach (var c in Model._CertificateList)
{

    <table style="width:100%; height:100%; padding:20px;border-collapse:separate;border-style: solid;border-width:20px;-moz-border-image: url('../Img/border.png') 100 round;-webkit-border-image: url('../Img/border.png') 100 round;-o-border-image: url('../Img/border.png') 100 round;border-image: url('../Img/border.png') 100 fill round;page-break-inside:avoid" cellspacing="0">

        <thead>
            <tr>
                <td colspan="15">

                    <div style="text-align:center">
                        <span style="font-family:'Times New Roman';font-size:20px; font-weight:bold">SIR  MOHAMED  YUSUF  SEAMEN  WELFARE  FOUNDATION</span>

                        <div style="width:100%;">
                            <div style="width:85%;float:right">
                                Nhava,Panvel Taluka Dist. Raigad-410206,Maharashtra<br />

                                Tel : 022-27212800/900 Fax: 0222272112495<br />
                                Email ID: tsrahman@tsrahaman.org<br />
                                www.tsrahaman.org<br />
                                INDOS No.009<br />
                                <span style="font-family:'Old English Text MT';font-size:40px; font-weight:bold">Training Ship Rahaman</span>
                            </div>
                            <div style="width:150px;height:160px;text-align:left;margin-right:15%">
                                <img src="~/Img/LOGO.jpg" style="width:140px;height:150px;position:absolute" />
                            </div>


                        </div>
                    </div>
                </td>

            </tr>
        </thead>
        <tbody>


            <tr>
                <td colspan="6">THIS IS TO CERTIFY THAT</td>
                <td colspan="9" style="text-align:right;font-weight:bold;font-family:Calibri;font-size:large">Certificate No. 0610510012016</td>
            </tr>
            <tr style="border-bottom:1px solid black">
                <td colspan="15">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"><input type="text" value="@(c.ApplicantName == null ? "" : c.ApplicantName)" /></span>
                </td>

            </tr>
            <tr>
                <td colspan="2">

                    Date of Birth
                </td>
                <td colspan="2">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"><input type="text" style="width:100px" value="@(c.DateofBirth == null ? "" : @Convert.ToDateTime(c.DateofBirth).ToString("dd-MM-yyyy"))" /> </span>
                </td>
                <td colspan="6">

                    Holder of C.D.C .No.
                </td>
                <td colspan="5">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"><input type="text" style="width:100%" value="@(c.CDCNo == null ? "" : c.CDCNo)" /></span>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    Passport No.
                </td>
                <td colspan="2">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:100px" value="@(c.PassportNo == null ? "" : c.PassportNo)" /></span>
                </td>
                <td colspan="11">
                    Certificate of Competency if any (Grade)
                </td>


            </tr>
            <tr>
                <td colspan="4">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:100%" value="" /></span>
                </td>
                <td>
                    No.
                </td>
                <td colspan="2">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:120px" value="@(c.Number == null ? "" : c.Number)" /></span>
                </td>
                <td colspan="8" style="text-align:right">
                    Indian National Database
                </td>


            </tr>
            <tr>
                <td colspan="3">
                    (INDoS No.)
                </td>
                <td>
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:100px" value="@(c.Indosno == null ? "" : c.Indosno)" /></span>
                </td>
                <td colspan="4">
                    holding Certificate No.
                </td>
                <td colspan="7" style="text-align:right">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:100%" value="" /></span>
                </td>


            </tr>
            <tr>
                <td colspan="2">
                    dated
                </td>
                <td colspan="2">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:100px" value="" /></span>
                </td>
                <td colspan="11">
                    For Medical First Aid
                </td>


            </tr>
            <tr>
                <td colspan="2">
                    Issued by
                </td>
                <td colspan="13">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:100%" value="" /></span>
                </td>



            </tr>


            <tr>
                <td colspan="15">@(c.LineOfCertificate == null ? "" : c.LineOfCertificate)</td>
            </tr>

            <tr>
                <td style="text-align:center" colspan="15"><span style="font-family:Calibri;font-size:22px; font-weight:bold">@(c.CourseName == null ? "" : c.CourseName)</span></td>
            </tr>


            <tr>
                <td colspan="15"><p>on <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"><input type="text" style="width:150px" value="@(c.StartDate == null ? "" : @Convert.ToDateTime(c.StartDate).ToString("dd-MM-yyyy"))" /></span>@(c.Paragraph1 == null ? "" : c.Paragraph1)</p></td>
            </tr>
            <tr>
                <td colspan="15"><p>@(c.Paragraph2 == null ? "" : c.Paragraph2)</p></td>
            </tr>
            <tr>
                <td colspan="15"><p>@(c.Paragraph3 == null ? "" : c.Paragraph3)</p></td>
            </tr>
            <tr>
                <td colspan="9">Signature of Candidate:__________________</td>

                <td align="center" colspan="6"><input type="text" /><br>Course Incharge<br>(@(c.CourseInCharge == null ? "" : c.CourseInCharge))</td>

            </tr>
            <tr>
                <td colspan="2">Date of Issue: </td>
                <td colspan="6">
                    <span style="font-family:'Times New Roman';font-size:15px; font-weight:bold"> <input type="text" style="width:150px" value="@(c.DateOfIssue == null ? "" : Convert.ToDateTime(c.DateOfIssue).ToString("dd-MM-yyyy"))" /></span>
                </td>
                <td rowspan="2" colspan="10" style="text-align:center">

                    @Html.Image(c.PrincipalSign, "No Signature Available", "100", "200")

                </td>
            </tr>
            <tr>
                <td colspan="15">
                    @(c.DateofExpiry == null ? "" : c.DateofExpiry)<input type="text" style="width:150px" />
                </td>
            </tr>
            <tr>
                <td colspan="8">
                    <div style="width:125px;height:135px;border:1px solid #000; display: flex;align-items: center;justify-content: center;"><p style="text-align:center;vertical-align:middle">Photograph</p></div>
                </td>

                <td align="center" colspan="7">

                    Principal<br />(@(c.PrincipalName == null ? "" : c.PrincipalName))<br />
                    <img src="~/Img/DNV LOGO.jpg" style="width:50px;height:80px;" />

                </td>



            </tr>


            <tr>
                <td colspan="15">
                    <span style="font-weight:normal;font-size:xx-small"> @(c.Topic5 == null ? "" : c.Topic5)</span>
                </td>
            </tr>

        </tbody>


    </table>
}

