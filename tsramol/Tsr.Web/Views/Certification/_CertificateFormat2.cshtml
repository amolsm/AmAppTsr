@model Tsr.Core.Models.CertificationCertificateVM
@using Tsr.Web.Common
<style>
    html, tbody {
        font-family: Arial;
         font-size:14px;
    }
    input {
        border: 0;
        border-bottom: solid 1px #000;
        outline: none;
        width: 100%;
         text-transform:uppercase;
    }
</style>
@foreach (var c in Model._CertificateList)
{


    <table style="width:100%; height:100%; padding-left:20px;padding-right:20px;padding-top:10px;padding-bottom:10px;border-collapse:separate;border-style: solid;border-width:25px;-moz-border-image: url('../Img/border.png') 100 round;-webkit-border-image: url('../Img/border.png') 100 round;-o-border-image: url('../Img/border.png') 100 round;border-image: url('../Img/border.png') 100 fill round;page-break-inside:avoid" cellspacing="0">

        <thead>
            <tr>
                <td colspan="15">

                    <div style="text-align:center">
                        <span style="font-family:'Times New Roman';font-size:20px; font-weight:bold">SIR  MOHAMED  YUSUF  SEAMEN  WELFARE  FOUNDATION</span>

                        <div style="width:100%;">
                            <div style="width:85%;float:right">
                                Nhava,Panvel Taluka Dist. Raigad-410206,Maharashtra<br />

                                <b>Tel :(9122) 27212800 Fax: 27212096/24950270</b><br />
                                email: tsrahman@tsrahaman.org<br />

                                <span style="font-family:'Old English Text MT';font-size:40px; font-weight:bold">Training Ship Rahaman</span>
                            </div>
                            <div style="width:125px;height:155px;text-align:left;margin-right:15%">
                                <img src="~/Img/LOGO.jpg" style="width:120px;height:150px;position:absolute" />
                            </div>


                        </div>
                    </div>
                </td>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align:center" colspan="15"><span style="font-family:Calibri;font-size:30px; font-weight:bold;color:#3e4095">@(c.CourseName == null ? "" : c.CourseName)</span></td>


            </tr>

            <tr>
                <td colspan="15">THIS IS TO CERTIFY THAT</td>
            </tr>
            <tr>
                <td colspan="15">
                    <input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold" value="@(c.ApplicantName == null ? "" : c.ApplicantName)" />
                </td>

            </tr>
            <tr>
                <td colspan="2">Date of Birth</td>
                <td colspan="3">
                    <input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.DateofBirth == null ? "" : @Convert.ToDateTime(c.DateofBirth).ToString("dd-MM-yyyy"))" />
                </td>
                <td colspan="6">Holder of C.D.C .No.</td>
                <td colspan="5"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:180px" value="@(c.CDCNo == null ? "" : c.CDCNo)" /></td>
            </tr>
            <tr>
                <td colspan="2">Passport No.</td>
                <td colspan="2"><input  readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.PassportNo == null ? "" : c.PassportNo)" /></td>
                <td colspan="8">Indian National Database(INDoS No.)</td>
                <td colspan="3"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:150px" value="@(c.Indosno == null ? "" : c.Indosno)" /></td>

            </tr>




            <tr>
                <td colspan="15"><p>has successfully completed a <b>@Html.Raw(c.LineOfCertificate == null ? "" : c.LineOfCertificate)</b>&nbsp;@Html.Raw(c.Paragraph1 == null ? "" : c.Paragraph1)</p></td>
            </tr>
            <tr>
                <td colspan="15"><p>@Html.Raw(c.Paragraph2 == null ? "" : c.Paragraph2)</p></td>
            </tr>
            <tr>
                <td colspan="15"><p>@Html.Raw(c.Paragraph3 == null ? "" : c.Paragraph3)</p></td>
            </tr>
            <tr>
                <td colspan="9">The course commenced on</td>
                <td colspan="2"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.StartDate == null ? "" : @Convert.ToDateTime(c.StartDate).ToString("dd-MM-yyyy"))" /></td>
                <td colspan="2" style="text-align:center">and completed on</td>
                <td colspan="2"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.EndDate == null ? "" : @Convert.ToDateTime(c.EndDate).ToString("dd-MM-yyyy"))" /></td>

            </tr>
            <tr><td colspan="15">at Training Ship "Rahaman"</td></tr>
            <tr>
                <td colspan="10">Signature of Candidate:_______________</td>

                <td colspan="5">Course Incharge__________________<br><span style="text-transform:uppercase">(@(c.CourseInCharge == null ? "" : c.CourseInCharge))</span></td>

            </tr>
            <tr>
                <td colspan="15">Issued at Mumbai</td>
            </tr>
            <tr>
                <td colspan="10">This_________day of ___________</td>
                <td colspan="4">
                    Principal___________________<br />(@(c.PrincipalName == null ? "" : c.PrincipalName))
                </td>

            </tr>

            <tr>
                <td colspan="8">
                    <div style="width:125px;height:135px;border:1px solid #000; display: flex;align-items: center;justify-content: center;"><p style="text-align:center;vertical-align:middle">Photograph</p></div>
                </td>

                <td align="right" colspan="7">


                    <img src="~/Img/DNV LOGO.jpg" style="width:50px;height:80px;" />

                </td>

            </tr>
            <tr>
                <td colspan="15">
                    <span style="font-weight:normal;font-size:xx-small">@Html.Raw(c.Topic5 == null ? "" : c.Topic5)</span>
                </td>
            </tr>

        </tbody>


    </table>
}
