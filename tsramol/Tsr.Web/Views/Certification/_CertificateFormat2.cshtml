@model Tsr.Core.Models.CertificationCertificateVM
@using Tsr.Web.Common
<style type="text/css">
    html, tbody {
        font-family: Arial;
        font-size: 14px;
    }

    input {
        border: 0;
        border-bottom: solid 1px #000;
        outline: none;
        width: 100%;
        text-transform: uppercase;
    }
    .cert {
        width: 100%;
        height: 100%;
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 5px;
        padding-bottom: 10px;
        border-collapse: separate;
        border-style: solid;
        border-width: 25px;
        -moz-border-image: url('../Img/border.png') 100 round;
        -webkit-border-image: url('../Img/border.png') 100 round;
        -o-border-image: url('../Img/border.png') 100 round;
        border-image: url('../Img/border.png') 100 fill round;
        page-break-inside: avoid
    }
</style>
<script>
var importDoc = document.currentScript.ownerDocument;
var style = importDoc.querySelector('style');
document.head.appendChild(style);
</script>

@foreach (var c in Model._CertificateList)
{


    <table class="cert" cellspacing="0">

        <thead>
            <tr>
                <td colspan="16">

                    <div style="text-align:center">
                        <span style="font-family:'Times New Roman';font-size:20px; font-weight:bold">SIR  MOHAMED  YUSUF  SEAMEN  WELFARE  FOUNDATION</span>

                        <div style="width:100%;">
                            <div style="width:85%;float:right">
                                Nhava,Panvel Taluka Dist. Raigad-410206,Maharashtra<br />

                                <b>Tel :(9122) 27212800 Fax: 27212096/24950270</b><br />
                                email: tsrahman@tsrahaman.org<br />
                                MTI No. 201004<br />
                                <span style="font-family:'Old English Text MT';font-size:40px; font-weight:bold">Training Ship Rahaman</span>
                            </div>
                            <div style="width:125px;height:155px;text-align:left;margin-right:15%">
                                <img src="~/Img/LOGO.jpg" style="width:120px;height:150px;position:absolute" />
                            </div>


                        </div>
                    </div>
                </td>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="16" style="text-align:right;font-weight:bold;font-family:Calibri;font-size:large">Certificate No. @(c.CertificateNo == null ? "" : c.CertificateNo)</td>
            </tr>
            <tr>
                <td style="text-align:center" colspan="16"><span style="font-family:Calibri;font-size:30px; font-weight:bold;color:#3e4095">@(c.CourseName == null ? "" : c.CourseName)</span></td>


            </tr>

            <tr>
                <td colspan="16">THIS IS TO CERTIFY THAT</td>
            </tr>
            <tr>
                <td colspan="16">
                    <input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold" value="@(c.ApplicantName == null ? "" : c.ApplicantName)" />
                </td>

            </tr>
            <tr>
                <td colspan="5">Date of Birth</td>
                <td colspan="2">
                    <input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.DateofBirth == null ? "" : @Convert.ToDateTime(c.DateofBirth).ToString("dd-MM-yyyy"))" />
                </td>
                <td colspan="8">Holder of C.D.C .No.</td>
                <td colspan="1"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:180px" value="@(c.CDCNo == null ? "" : c.CDCNo)" /></td>
            </tr>
            <tr>
                <td colspan="5">Passport No.</td>
                <td colspan="2"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.PassportNo == null ? "" : c.PassportNo)" /></td>
                <td colspan="8">Indian National Database(INDoS No.)</td>
                <td colspan="1"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:150px" value="@(c.Indosno == null ? "" : c.Indosno)" /></td>

            </tr>




            <tr>
                <td colspan="16"><p>has successfully completed a <b>@Html.Raw(c.LineOfCertificate == null ? "" : c.LineOfCertificate)</b>&nbsp;@Html.Raw(c.Paragraph1 == null ? "" : c.Paragraph1)</p></td>
            </tr>
            <tr>
                <td colspan="16"><p>@Html.Raw(c.Paragraph2 == null ? "" : c.Paragraph2)</p></td>
            </tr>
            <tr>
                <td colspan="16"><p>@Html.Raw(c.Paragraph3 == null ? "" : c.Paragraph3)</p></td>
            </tr>
            <tr>
                <td colspan="9">The course commenced on</td>
                <td colspan="2"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.StartDate == null ? "" : @Convert.ToDateTime(c.StartDate).ToString("dd-MM-yyyy"))" /></td>
                <td colspan="3" style="text-align:center">and completed on</td>
                <td colspan="2"><input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.EndDate == null ? "" : @Convert.ToDateTime(c.EndDate).ToString("dd-MM-yyyy"))" /></td>

            </tr>
            <tr><td colspan="16">at Training Ship "Rahaman"</td></tr>
            <tr>
                <td colspan="13">Signature of Cadet:_______________</td>

                <td colspan="5" style="text-align:center">__________________<br />Course Incharge<br><span style="text-transform:capitalize">(@(c.CourseInCharge == null ? "" : c.CourseInCharge))</span></td>

            </tr>
            <tr>
                <td colspan="16">Issued at Mumbai</td>
            </tr>
            <tr>
                <td colspan="3">Date of Issue: </td>
                <td colspan="10">
                    <input readonly style="font-family:'Times New Roman';font-size:15px; font-weight:bold;width:100px" value="@(c.DateOfIssue == null ? "" : Convert.ToDateTime(c.DateOfIssue).ToString("dd-MM-yyyy"))" />
                </td>
                <td colspan="6" style="text-align:center">
                    @*Principal___________________*@
                    @Html.Image(c.PrincipalSign, "No Signature Available", "75", "180")
                    <br />
                    Principal <br />(@(c.PrincipalName == null ? "" : c.PrincipalName)) <br /> INDoS No. : 98NL1339
                </td>

            </tr>

            <tr>
                <td colspan="10">
                    <div style="width:125px;height:135px;border:1px solid #000; display: flex;align-items: center;justify-content: center;"><p style="text-align:center;vertical-align:middle">Photograph</p></div>
                </td>

                <td align="right" colspan="7">


                    <img src="~/Img/DNV LOGO.jpg" style="width:50px;height:80px;" />

                </td>

            </tr>
            <tr>
                <td colspan="15">
                    <span style="font-weight:normal;font-size:xx-small">@Html.Raw(c.Topic5 == null ? "" : c.Topic5)</span>
                </td>
            </tr>

        </tbody>


    </table>
}
