@model IEnumerable<Tsr.Core.Models.FeesScrutineeListVM>
@{
    ViewBag.Title = "Scrutinee";
}

<!-- START BREADCRUMB -->
<ul class="breadcrumb push-down-0">
    <li><a href="#">Home</a></li>
    <li><a href="#">Admission</a></li>
    <li><a href="#">Scrutinee</a></li>
    @*<li class="active">Error 404</li>*@
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div>
        <div class="row">
            <div class="col-md-12">

                <form class="form-horizontal">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Scrutinee</h3>

                        </div>

                        <div class="panel-body">
                            <div class="row">

                                <div class="col-md-12">

                                    <div class="form-group">



                                        <div class="col-md-3">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBox("ApplicationCode","", new { @class = "form-control", @placeholder ="Application ID" })
                                            </div>

                                        </div>


                                        <div class="col-md-3">
                                            <div class="input-group">
                                                <input class="btn btn-primary" type="button" value="Search" onclick="Search()" />
                                            </div>

                                        </div>

                                    </div>


                                </div>


                            </div>
                            <div id="dvResult">
                                @{Html.RenderPartial("ScrutineeList", Model);}
                                <script src="~/Scripts/js/plugins/datatables/jquery.dataTables.min.js"></script>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>


    </div>


</div>
<!-- END PAGE CONTENT WRAPPER -->
<script>


    function Search() {
       
      var ApplicationCode = $('#ApplicationCode').val();

      $("#dvResult").load('@(Url.Action("GetListByApplicationCode", "Fees",null, Request.Url.Scheme))?ApplicationCode=' + ApplicationCode);
  }
</script>