

@{
    ViewBag.Title = "Check Payment Status";
}

<!-- START BREADCRUMB -->
<ul class="breadcrumb push-down-0">
    <li><a href="#">Home</a></li>
    <li><a href="#">Fees</a></li>
    <li><a href="#">Payment Status</a></li>
    @*<li class="active">Error 404</li>*@
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div>
        <div class="row">
            <div class="col-md-12">

                <form class="form-horizontal">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Student List</h3>

                        </div>

                        <div class="panel-body">
                            
                            <div style="border:solid; padding:18px">
                                
                                <div class="row">
                                    <div class="form-group">

                                        <div class="col-md-3">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.DropDownList("ApplicationId",
                                                (IEnumerable<SelectListItem>)ViewBag.Students, "Select Student", new { @class = "form-control" })
                                            </div>

                                        </div>

                                       

                                        <div class="col-md-3">
                                            <div class="input-group">
                                                <input class="btn btn-primary" type="button" value="Search" onclick="Search()" />
                                                &nbsp;&nbsp; <input type="button" class="btn btn-primary" value="Refresh Page" onClick="window.location.reload()">

                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                            <br /><br /><br />
                            <div id="dvResult">
                                @*@{Html.RenderPartial("ApplicantsList", Model);}*@

                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>


    </div>


</div>
<!-- END PAGE CONTENT WRAPPER -->
<script>
    $(document).ready(function () {
        $("#ApplicationId").chosen({
            //disable_search_threshold: 10,
            no_results_text: "Oops, nothing found!",
            width: "95%"
        });
    });
  
  function Search() {
      var ApplicationId = $('#ApplicationId').val();

      $("#dvResult").load('@(Url.Action("PaymentStatusSearch", "Fees",null, Request.Url.Scheme))?ApplicationId=' + ApplicationId);
  }
   
</script>

